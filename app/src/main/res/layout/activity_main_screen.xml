<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/arch"
    tools:context="com.bang.bangquiz1.ActivityMainScreen">

    <Button
        android:id="@+id/btnNextCS"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="B.S. COMPUTER SCIENCE"
        android:onClick="nextActivity1"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnNextIT"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="B.S. INFORMATION TECHNOLOGY"
        android:onClick="nextActivity2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btnNextCS"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnNextIS"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="B.S. INFORMATION SYSTEMS"
        android:onClick="nextActivity3"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/btnNextIT"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
