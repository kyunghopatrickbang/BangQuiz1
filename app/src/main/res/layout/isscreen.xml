<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzag">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/is02"
        android:id="@+id/imageView" />

    <Button
        android:id="@+id/btnNextHome"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:onClick="nextActivity1"
        android:text="HOME"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <Button
        android:id="@+id/btnNextCS"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:onClick="nextActivity2"
        android:text="B.S. CS"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_alignBaseline="@+id/btnNextIT"
        android:layout_alignBottom="@+id/btnNextIT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnNextIT"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:onClick="nextActivity3"
        android:text="B.S. IT"
        android:layout_alignBaseline="@+id/btnNextHome"
        android:layout_alignBottom="@+id/btnNextHome"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
